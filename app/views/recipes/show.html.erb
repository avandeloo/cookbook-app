<h2>Title: <%= @recipe.title %></h2>
<h5>Updated On: <%= @recipe.friendly_updated_at %></h5>
<h5>Prep Time: <%= @recipe.friendly_prep_time %></h5>
<h4>Chef: <%= @recipe.chef %></h4>
<h3>Ingredients:</h3>
<ul>
  <% @recipe.ingredients_list.each do |ingredient| %>
    <li><%= ingredient %></li>  
  <% end %>
</ul>

<h3>Directions:</h3> 
<ol>
  <% @recipe.directions_list.each do |direction| %>
    <li><%= direction %></li>
  <% end %>
</ol> 


<%= link_to "Edit Recipe", "/recipes/#{@recipe.id}/edit", class: "btn btn-info" %>
<%= link_to "Delete", "/recipes/#{@recipe.id}", class: "btn btn-danger", method: :delete %>
