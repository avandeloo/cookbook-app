<h1>New Recipe</h1>

<%= form_tag "/recipes", method: :post do %>
  <div>
    <%= label_tag :title, nil, placeholder: "Title" %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :chef, nil, placeholder: "Chef"  %>
    <%= text_field_tag :chef %>
  </div>
  <div>
    <%= label_tag :ingredients, nil, placeholder: "Ingredients"  %>
    <%= text_field_tag :ingredients %>
  </div>
  <div>
    <%= label_tag :directions, nil, placeholder: "Directions"  %>
    <%= text_field_tag :directions %>
  </div>
  <div>
    <%= label_tag :prep_time, nil, placeholder: "Prep Time" %>
    <%= text_field_tag :prep_time%>
  </div>
  <div>
    <%= label_tag :image, nil, placeholder: "Image Url" %>
    <%= text_field_tag :image%>
  </div>
  <%= submit_tag "Write Recipe on Card" %>

<% end %>